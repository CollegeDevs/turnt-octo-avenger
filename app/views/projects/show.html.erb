<div class="container">
<div class="row">
<div >
 <ol class="breadcrumb">
 	<li><%= link_to 'Projects', projects_path %></li>
    <li class="active">
      <%= link_to @project.name, project_path(@project) %>
    </li>
  </ol>
</div>


<% if @project.users.include? current_user || current_user == @project.owner %>

<div class="pull-right " style="margin-top: 10px">
<%= render partial: 'projects/invite_user'%>
</div>
<% end %>
</div>
</div>
<div class="container">
<div class="row">
<div class="col-md-8">
<div class="calendar">
</div>
</div>
<div class="events">
<div class="col-md-4">
  <h3 class="text-center">Events</h3>
  <%= render partial: 'events/index', locals: {element: @project}%>
  <%= link_to 'Add Event', new_project_event_path(@project, @event)%>
  <%= link_to 'All Events', project_events_path(@project), class: "pull-right"%>
</div>
</div>
</div>

</div>
<div class="container">
<div class="row">
<p>
  <strong>Description:</strong>
  <%= @project.description %>
</p>

<p>
  <strong>Make public:</strong>
  <%= @project.make_public %>
</p>
</div>
<%= link_to new_project_board_path(@project) do %>
	 <i class="glyphicon glyphicon-plus"></i> Add Board
<% end %>

<h3>Boards</h3>
<div class="row">
<div id="my-hover">
<% @project.boards.order("created_at desc").each do |b| %>
	<div class="col-md-4  board-primary">
	<h4><%=link_to b.name , project_board_path(@project, b)%></h4>
	<%= truncate(b.description,omission: '... (continued)') %><br/>
	<br/><br/></br></br><hr/>
	<%= b.owner.name %>  <div class="pull-right">  <%= local_date(b.created_at)%></div>
	</div>
<% end %>
</div>
</div>


</div>

<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>
